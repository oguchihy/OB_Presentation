info_json_path <- file.path(Sys.getenv("LOCALAPPDATA"), "Dropbox", "info.json")
print(info_json_path)
if (file.exists(info_json_path)) {
  info <- jsonlite::fromJSON(info_json_path)
  print(info)
} else {
  print("info.json does not exist at this location")
}




library(jsonlite)

# Path to the info.json confirmed from previous output
info_json_path <- "C:\\Users\\onkwocha\\AppData\\Local/Dropbox/info.json"

# Check if the file exists and read it
if (file.exists(info_json_path)) {
  # Read the JSON file
  info <- jsonlite::fromJSON(info_json_path)
  print(info)  # Print the contents to verify the structure
} else {
  print("The info.json file does not exist.")
}
